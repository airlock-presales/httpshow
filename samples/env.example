# Application Settings
HTTPSHOW_SERVER_PORT=8000
HTTPSHOW_BASE_URL=http://localhost:8000
HTTPSHOW_APP_SECRET_KEY=your-secret-key-here-change-this-in-production
HTTPSHOW_CLIENT_TIMEOUT=30
HTTPSHOW_VERIFY_PROVIDER_CERTIFICATE=true

# OIDC Provider Configuration
# Example: Airlock IAM (replace with your actual values)
HTTPSHOW_OIDC_ISSUER=https://login.example.com
HTTPSHOW_OIDC_CLIENT_ID=your-client-id
HTTPSHOW_OIDC_CLIENT_SECRET=your-client-secret
HTTPSHOW_OIDC_LOGOUT_URL=logout-url-on-oidc-op
HTTPSHOW_OIDC_SCOPES=openid email profile

# OIDC Features
HTTPSHOW_OIDC_PKCE=true
HTTPSHOW_OIDC_PAR=false
HTTPSHOW_OIDC_USERINFO=false

# Session Configuration
HTTPSHOW_SESSION_COOKIE_NAME=demo_session
HTTPSHOW_SESSION_LIFETIME=300

# Proxy Configuration (if behind reverse proxy)
HTTPSHOW_TRUST_PROXY_HEADERS=false
HTTPSHOW_TRUSTED_PROXIES=

# API call
HTTPSHOW_API_AUTH_TOKEN=access-token
HTTPSHOW_API_AUTH_HEADER=
HTTPSHOW_API_URL=http://localhost:8000
HTTPSHOW_API_HOST=
HTTPSHOW_API_TKX_URL=backend-url-expecting-exchanged-token
HTTPSHOW_API_TKX_HOST=
HTTPSHOW_TOKEN_EXCHANGE_URL=url-for-token-endpoint
HTTPSHOW_TOKEN_EXCHANGE_HOST=
HTTPSHOW_TOKEN_EXCHANGE_CLIENT_ID=token-exchange-client-id
HTTPSHOW_TOKEN_EXCHANGE_CLIENT_SECRET=token-exchange-client-secret

# UI Configuration
HTTPSHOW_CSS_FILE=
HTTPSHOW_NIGHT_MODE=false

# Configuration file
HTTPSHOW_CONFIG_FILE=/opt/httpshow/config.yaml
